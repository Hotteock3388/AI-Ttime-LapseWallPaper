<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ClickableItem"
    android:background="@drawable/redge_gray_20dp"
    android:elevation="10dp"
    android:foreground="@drawable/button_click_effect_20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_image"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:layout_marginRight="6dp"
        android:layout_marginVertical="8dp"
        />

    <TextView style="@style/Text_Wo_Shadow"
        android:id="@+id/textView_ButtonText_ButtonLayout"
        android:layout_gravity="center"
        android:padding="10dp"
        />

</LinearLayout>